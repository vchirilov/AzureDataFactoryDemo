{
	"name": "CopyManyBinaryFiles",
	"properties": {
		"description": "no description",
		"activities": [
			{
				"name": "Copy files from folder",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "input-folder/MyFolder/"
					},
					{
						"name": "Destination",
						"value": "output-folder/TargetFolder/"
					},
					{
						"name": "Author",
						"value": "Veaceslav"
					}
				],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"deleteFilesAfterCompletion": false
						},
						"formatSettings": {
							"type": "BinaryReadSettings"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "InputBinaryDataSet",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "OutputBinaryDataSet",
						"type": "DatasetReference"
					}
				]
			}
		],
		"folder": {
			"name": "PipelinesFolder01"
		},
		"annotations": []
	}
}